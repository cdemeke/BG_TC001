# Dexcom credentials
DEXCOM_USERNAME=your_email@example.com
DEXCOM_PASSWORD=your_password
DEXCOM_REGION=us  # us, ous (outside US), or jp (Japan)

# Optional: Use account ID instead of username
# DEXCOM_ACCOUNT_ID=12345678-90ab-cdef-1234-567890abcdef

# Cache settings
CACHE_TTL_SECONDS=90

# AWTRIX display settings (optional)
# AWTRIX_ICON=glucose
# AWTRIX_DURATION=10
# AWTRIX_LIFETIME=120

# Glucose thresholds (optional, defaults shown)
# GLUCOSE_CRITICAL_LOW=55
# GLUCOSE_LOW=70
# GLUCOSE_HIGH=180
# GLUCOSE_VERY_HIGH=240

# Delta threshold for double arrows (optional)
# DELTA_FAST_THRESHOLD=20

# Server settings
PORT=8080
LOG_LEVEL=INFO

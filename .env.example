# Dexcom credentials
DEXCOM_USERNAME=your_email@example.com
DEXCOM_PASSWORD=your_password
DEXCOM_REGION=us  # us, ous (outside US), or jp (Japan)

# Optional: Use account ID instead of username
# DEXCOM_ACCOUNT_ID=12345678-90ab-cdef-1234-567890abcdef

# Cache settings
CACHE_TTL_SECONDS=90

# AWTRIX display settings (optional)
# AWTRIX_ICON=glucose
# AWTRIX_DURATION=10
# AWTRIX_LIFETIME=120

# Glucose thresholds in mg/dL (optional, defaults shown)
# GLUCOSE_CRITICAL_LOW=55
# GLUCOSE_LOW=70
# GLUCOSE_HIGH=180
# GLUCOSE_VERY_HIGH=240

# Delta thresholds for arrow types
# ±0 to stable: stable arrow (→)
# ±stable to rapid: diagonal arrow (↗ ↘)
# Beyond rapid: vertical arrow (↑ ↓)
# DELTA_STABLE_THRESHOLD=5
# DELTA_RAPID_THRESHOLD=15

# Arrow icons (filename without extension, or LaMetric icon ID)
# Download these to your AWTRIX3 via the web interface Icons tab
# ICON_STABLE=8259
# ICON_UP=7465
# ICON_DOWN=7463
# ICON_DIAGONAL_UP=56019
# ICON_DIAGONAL_DOWN=57798

# Display colors (RGB format: "R,G,B")
# Glucose value colors based on range
# COLOR_CRITICAL_LOW=255,0,0       # Red - critical low (<55)
# COLOR_LOW=255,0,0                # Red - low (<70)
# COLOR_NORMAL=0,255,0             # Green - normal (70-180)
# COLOR_HIGH=255,255,0             # Yellow - high (181-240)
# COLOR_VERY_HIGH=255,128,0        # Orange - very high (>240)

# Delta text color (change amount, e.g., "+5" or "-11")
# COLOR_DELTA=255,255,255          # White (default)

# Progress bar colors
# COLOR_PROGRESS_BAR=0,255,255     # Cyan
# COLOR_PROGRESS_BG=32,32,32       # Dark gray

# Server settings
PORT=8080
LOG_LEVEL=INFO
